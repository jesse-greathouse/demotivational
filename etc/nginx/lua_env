# Assign the environment variables from the OS ENV
set_by_lua $ENV 'return os.getenv("ENV")';
set_by_lua $DEBUG 'return (os.getenv("DEBUG") == nil) and "false" or os.getenv("DEBUG")';
set_by_lua $FORCE_SSL 'return os.getenv("FORCE_SSL")';
set_by_lua $DIR 'return os.getenv("DIR")';
set_by_lua $BIN 'return os.getenv("BIN")';
set_by_lua $ETC 'return os.getenv("ETC")';
set_by_lua $OPT 'return os.getenv("OPT")';
set_by_lua $SRC 'return os.getenv("SRC")';
set_by_lua $TMP 'return os.getenv("TMP")';
set_by_lua $VAR 'return os.getenv("VAR")';
set_by_lua $WEB 'return os.getenv("WEB")';
set_by_lua $CACHE_DIR 'return os.getenv("CACHE_DIR")';
set_by_lua $LOG_DIR 'return os.getenv("LOG_DIR")';
set_by_lua $REDIS_HOST 'return os.getenv("REDIS_HOST")';
set_by_lua $GOOGLE_SEARCH_ENGINE_ID 'return os.getenv("GOOGLE_SEARCH_ENGINE_ID")';
set_by_lua $GOOGLE_SEARCH_KEY 'return os.getenv("GOOGLE_SEARCH_KEY")';
set_by_lua $GOOGLE_OAUTH_SECRET 'return os.getenv("GOOGLE_OAUTH_SECRET")';
set_by_lua $FACEBOOK_OAUTH_KEY 'return os.getenv("FACEBOOK_OAUTH_KEY")';
set_by_lua $FACEBOOK_OAUTH_SECRET 'return os.getenv("FACEBOOK_OAUTH_SECRET")';
set_by_lua $GOOGLE_OAUTH_KEY 'return os.getenv("GOOGLE_OAUTH_KEY")';